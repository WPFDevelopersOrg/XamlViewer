<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:themes="clr-namespace:XamlTheme">


    <Style x:Key="{x:Static themes:ResourceKeys.HorSeparatorStyleKey}" TargetType="{x:Type Separator}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <StackPanel SnapsToDevicePixels="true">
                        <Rectangle Fill="#CCCEDB" Height="1"/>
                        <Rectangle Fill="#F6F6F6" Height="1"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{x:Static themes:ResourceKeys.VerSeparatorStyleKey}" TargetType="{x:Type Separator}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <StackPanel Orientation="Horizontal" SnapsToDevicePixels="true">
                        <Rectangle Fill="#CCCEDB" Width="1"/>
                        <Rectangle Fill="#F6F6F6" Width="1"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>