                    </controls:DrawingIcon.HDPIDrawing>
                </controls:DrawingIcon>
            </Button>
        </Grid>
    </controls:UserWindow.CaptionContent>
    <Grid>
	    <Grid.RowDefinitions>
            <RowDefinition Height="{Binding SettingRowHeight}"/>
            <RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
	    <!--Setting-->
	    <views:SettingControl Height="120" Margin="6,0"/>
		<Grid Grid.Row="1" Margin="0,6,0,0">
		    <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
		    <!--Data-->
		    <views:DataControl Grid.Column="0"/>
			<GridSplitter Grid.Column="1" Width="25"
			              HorizontalAlignment="Center" VerticalAlignment="Stretch"
			              themeUtils:GridSplitterUtil.Orientation="Vertical"
						  Style="{StaticResource {x:Static themes:ResourceKeys.NormalGridSplitterStyleKey}}"
						  utils:CursorUtil.Source="/XamlViewer;component/Assets/Cursors/Splitter_lr.cur"/>
		    <Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/> 
				</Grid.RowDefinitions>
				<!--Tab-->
				<views:TabsControl Grid.Row="0"/>
				<!--Work Area-->
				<Grid Grid.Row="1" prism:RegionManager.RegionName="{x:Static ms:RegionNames.WorkName}"/>
			</Grid>
		</Grid>
		<!--Status-->
	    <views:StatusControl Grid.Row="2" Height="25" Background="#007ACC"/>
    </Grid>
</controls:UserWindow>
