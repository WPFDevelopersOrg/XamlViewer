<UserControl x:Class="XamlTheme.Controls.Hyperlink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock>
            <Hyperlink x:Name="LocalHyperlink" Click="LocalHyperlink_Click"
                       Tag="{Binding Tag,RelativeSource={RelativeSource AncestorType=UserControl}}">
                <TextBlock x:Name="LinkText"/>
            </Hyperlink>
        </TextBlock> 
    </Grid>
</UserControl>
